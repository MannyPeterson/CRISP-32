{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CRISP-32",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/crisp32",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set disassembly flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build CRISP-32 (Debug)",
            "miDebuggerPath": "/usr/bin/gdb",
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            }
        },
        {
            "name": "Run CRISP-32 (No Debug)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/crisp32",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "Build CRISP-32"
        }
    ]
}
